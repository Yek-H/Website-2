{% comment %}
  Product Grid with Custom Product Type Display
  File: sections/product-grid-with-type.liquid
  OPTIMIZED FOR: LCP, CLS, TTFB, INP
  FIXED: Theme-check errors and deprecated img_url filter
{% endcomment %}

{%- liquid
  assign collection = collections[section.settings.collection]
  assign products_per_row = section.settings.products_per_row
-%}

<div class="product-grid-section" data-section-id="{{ section.id }}">
  <div class="page-width">
    {%- if section.settings.heading != blank -%}
      <h2 class="section-heading">{{ section.settings.heading }}</h2>
    {%- endif -%}

    <div class="product-grid product-grid--{{ products_per_row }} product-grid--mobile-{{ section.settings.mobile_columns }}">
      {%- for product in collection.products limit: section.settings.products_to_show -%}
        {%- liquid
          if forloop.index == 1
            assign loading_strategy = 'eager'
            assign fetch_priority = 'high'
          elsif forloop.index <= products_per_row
            assign loading_strategy = 'eager'
            assign fetch_priority = 'auto'
          else
            assign loading_strategy = 'lazy'
            assign fetch_priority = 'auto'
          endif
        -%}
        
        {% comment %}
          CLS Fix: Changed contain-intrinsic-size from '0 500px' (just image)
          to 'auto 650px' to account for the product info box (~150px),
          preventing a layout shift when the card is scrolled into view.
        {% endcomment %}
        <div class="product-card" style="content-visibility: auto; contain-intrinsic-size: auto 650px;">
          <a href="{{ product.url }}" class="product-card__link">
            <div class="product-card__image-wrapper">
              {%- if section.settings.show_badges and section.settings.badge_position == 'image' -%}
                <div class="product-card__badges product-card__badges--image">
                  {%- if product.available == false -%}
                    <span class="badge badge--sold-out">{{ 'products.product.sold_out' | t | default: 'Agotado' }}</span>
                  {%- elsif product.compare_at_price > product.price -%}
                    <span class="badge badge--sale">{{ 'products.product.on_sale' | t | default: 'Oferta' }}</span>
                  {%- endif -%}
                </div>
              {%- endif -%}

              {%- if product.featured_image -%}
                {% comment %} FIX: Replaced deprecated 'img_url' with 'image_url' and correct syntax {% endcomment %}
                <img 
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  srcset="{{ product.featured_image | image_url: width: 200 }} 200w,
                          {{ product.featured_image | image_url: width: 400 }} 400w,
                          {{ product.featured_image | image_url: width: 600 }} 600w"
                  sizes="(max-width: 480px) 100vw, (max-width: 768px) 50vw, (max-width: 1024px) 33vw, 25vw"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="product-card__image"
                  width="400"
                  height="500"
                  loading="{{ loading_strategy }}"
                  fetchpriority="{{ fetch_priority }}"
                  decoding="async"
                >
              {%- else -%}
                <div class="product-card__image-placeholder">
                  {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                </div>
              {%- endif -%}
            </div>

            <div class="product-card__info">
              {%- if section.settings.show_badges and section.settings.badge_position == 'top' -%}
                <div class="product-card__badges product-card__badges--top">
                  {%- if product.available == false -%}
                    <span class="badge badge--sold-out">{{ 'products.product.sold_out' | t | default: 'Agotado' }}</span>
                  {%- elsif product.compare_at_price > product.price -%}
                    <span class="badge badge--sale">{{ 'products.product.on_sale' | t | default: 'Oferta' }}</span>
                  {%- endif -%}
                </div>
              {%- endif -%}

              <h3 class="product-card__title">{{ product.title }}</h3>
              
              {%- if section.settings.show_product_type and product.type != blank -%}
                <p class="product-card__type">{{ product.type }}</p>
              {%- endif -%}

              {%- if section.settings.show_vendor and product.vendor != blank -%}
                <p class="product-card__vendor">{{ product.vendor }}</p>
              {%- endif -%}

              <div class="product-card__price">
                {%- if product.compare_at_price > product.price -%}
                  <span class="product-card__price--sale">
                    {{ product.price | money }}
                  </span>
                  <span class="product-card__price--compare">
                    {{ product.compare_at_price | money }}
                  </span>
                {%- else -%}
                  <span class="product-card__price--regular">
                    {{ product.price | money }}
                  </span>
                {%- endif -%}
              </div>

              {%- if section.settings.show_badges and section.settings.badge_position == 'bottom' -%}
                <div class="product-card__badges product-card__badges--bottom">
                  {%- if product.available == false -%}
                    <span class="badge badge--sold-out">{{ 'products.product.sold_out' | t | default: 'Agotado' }}</span>
                  {%- elsif product.compare_at_price > product.price -%}
                    <span class="badge badge--sale">{{ 'products.product.on_sale' | t | default: 'Oferta' }}</span>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

