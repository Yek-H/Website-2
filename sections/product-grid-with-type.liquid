{% schema %}
{
  "name": "Product Grid with Type",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 50,
      "step": 1,
      "label": "Products to show",
      "default": 8
    },
    {
      "type": "range",
      "id": "products_per_row",
      "min": 2,
      "max": 5,
      "step": 1,
      "label": "Products per row (desktop)",
      "default": 4
    },
    {
      "type": "header",
      "content": "Mobile Settings"
    },
    {
      "type": "select",
      "id": "mobile_columns",
      "label": "Mobile columns",
      "options": [
        {
          "value": "1",
          "label": "1 column"
        },
        {
          "value": "2",
          "label": "2 columns"
        }
      ],
      "default": "2",
      "info": "Number of product columns on mobile devices"
    },
    {
      "type": "header",
      "content": "Product Information Display"
    },
    {
      "type": "checkbox",
      "id": "show_product_type",
      "label": "Show product type",
      "default": true,
      "info": "Display the product type below the product title"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "header",
      "content": "Badges Settings"
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show sale and sold out badges",
      "default": true
    },
    {
      "type": "select",
      "id": "badge_position",
      "label": "Badge position",
      "options": [
        {
          "value": "image",
          "label": "On product image"
        },
        {
          "value": "top",
          "label": "Above title"
        },
        {
          "value": "bottom",
          "label": "Below price"
        }
      ],
      "default": "image",
      "info": "Choose where to display sale/sold out badges"
    },
    {
      "type": "header",
      "content": "Product Type Styling"
    },
    {
      "type": "color",
      "id": "type_color",
      "label": "Product type text color",
      "default": "#666666"
    },
    {
      "type": "select",
      "id": "type_style",
      "label": "Product type style",
      "options": [
        {
          "value": "text",
          "label": "Plain text"
        },
        {
          "value": "pill",
          "label": "Pill badge"
        },
        {
          "value": "underline",
          "label": "Underlined"
        }
      ],
      "default": "text"
    },
    {
      "type": "color",
      "id": "type_bg_color",
      "label": "Product type background color (pill style)",
      "default": "#f5f5f5"
    }
  ],
  "presets": [
    {
      "name": "Product Grid with Type"
    }
  ]
}
{% endschema %}

