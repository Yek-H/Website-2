{% endcomment %}
<style>
.product-grid-section {
  padding: 60px 0;
}

.page-width {
  max-width: 1400px;
  margin: 0 auto;
  padding: 0 20px;
}

.section-heading {
  text-align: center;
  font-size: 32px;
  font-weight: 600;
  margin-bottom: 40px;
  color: #333;
}

.product-grid {
  display: grid;
  gap: 30px;
}

.product-grid--2 {
  grid-template-columns: repeat(2, 1fr);
}

.product-grid--3 {
  grid-template-columns: repeat(3, 1fr);
}

.product-grid--4 {
  grid-template-columns: repeat(4, 1fr);
}

.product-grid--5 {
  grid-template-columns: repeat(5, 1fr);
}

.product-card {
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  border: 1px solid #e5e5e5;
  will-change: transform;
}

.product-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
}

.product-card__link {
  text-decoration: none;
  color: inherit;
  display: block;
}

.product-card__image-wrapper {
  position: relative;
  padding-bottom: 125%;
  overflow: hidden;
  background: #f9f9f9;
  contain: layout style paint;
}

.product-card__image,
.product-card__image-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
  will-change: transform;
}

.product-card__image-placeholder svg {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.product-card:hover .product-card__image {
  transform: scale(1.05);
}

.product-card__info {
  padding: 20px;
  text-align: center;
}

.product-card__title {
  font-size: 16px;
  font-weight: 600;
  margin: 0 0 8px 0;
  color: #333;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-align: center;
  min-height: 2.8em;
}

.product-card__type {
  font-size: 13px;
  margin: 0 0 12px 0;
  color: {{ section.settings.type_color | default: '#666' }};
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  text-align: center;
}

/* Product Type Styles */
{% if section.settings.type_style == 'pill' %}
.product-card__type {
  display: inline-block;
  background: {{ section.settings.type_bg_color | default: '#f5f5f5' }};
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
}
{% elsif section.settings.type_style == 'underline' %}
.product-card__type {
  border-bottom: 2px solid {{ section.settings.type_color | default: '#666' }};
  display: inline-block;
  padding-bottom: 2px;
}
{% endif %}

.product-card__vendor {
  font-size: 12px;
  color: #999;
  margin: 0 0 12px 0;
  font-weight: 400;
  text-align: center;
}

.product-card__price {
  font-size: 18px;
  font-weight: 600;
  margin-top: 8px;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  flex-wrap: wrap;
  text-align: center;
}

.product-card__price--regular {
  color: #333;
}

.product-card__price--sale {
  color: #e63946;
}

.product-card__price--compare {
  color: #999;
  text-decoration: line-through;
  font-size: 14px;
  font-weight: 400;
}

/* Badge Positioning */
.product-card__badges {
  display: flex;
  gap: 8px;
  justify-content: center;
  flex-wrap: wrap;
}

.product-card__badges--image {
  position: absolute;
  top: 15px;
  right: 15px;
  z-index: 2;
  flex-direction: column;
  align-items: flex-end;
}

.product-card__badges--top {
  margin-bottom: 12px;
}

.product-card__badges--bottom {
  margin-top: 12px;
}

.badge {
  display: inline-block;
  padding: 6px 12px;
  border-radius: 4px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  text-align: center;
}

.badge--sold-out {
  background: #666;
  color: #fff;
}

.badge--sale {
  background: #e63946;
  color: #fff;
}

/* Tablet */
@media (max-width: 1024px) {
  .product-grid--2,
  .product-grid--3,
  .product-grid--4,
  .product-grid--5 {
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  }
}

/* Mobile - Respects mobile_columns setting */
@media (max-width: 768px) {
  .product-grid-section {
    padding: 40px 0;
  }

  .section-heading {
    font-size: 24px;
    margin-bottom: 24px;
  }

  /* 1 Column Mobile Layout */
  .product-grid.product-grid--mobile-1,
  .product-grid--2.product-grid--mobile-1,
  .product-grid--3.product-grid--mobile-1,
  .product-grid--4.product-grid--mobile-1,
  .product-grid--5.product-grid--mobile-1 {
    grid-template-columns: 1fr;
    gap: 20px;
  }

  /* 2 Column Mobile Layout (Default) */
  .product-grid.product-grid--mobile-2,
  .product-grid--2.product-grid--mobile-2,
  .product-grid--3.product-grid--mobile-2,
  .product-grid--4.product-grid--mobile-2,
  .product-grid--5.product-grid--mobile-2 {
    grid-template-columns: repeat(2, 1fr);
    gap: 15px;
  }

  .product-card__info {
    padding: 15px;
  }

  .product-card__title {
    font-size: 14px;
  }

  .product-card__type {
    font-size: 11px;
    margin-bottom: 8px;
  }

  .product-card__price {
    font-size: 16px;
  }

  .product-card__badges--image {
    top: 10px;
    right: 10px;
  }
}

/* Extra Small Mobile */
@media (max-width: 480px) {
  .page-width {
    padding: 0 15px;
  }

  .product-grid.product-grid--mobile-2,
  .product-grid--2.product-grid--mobile-2,
  .product-grid--3.product-grid--mobile-2,
  .product-grid--4.product-grid--mobile-2,
  .product-grid--5.product-grid--mobile-2 {
    gap: 12px;
  }

  .product-card__info {
    padding: 12px;
  }

  .product-card__title {
    font-size: 13px;
  }

  .product-card__type {
    font-size: 10px;
  }

  .product-card__price {
    font-size: 15px;
  }

  .badge {
    font-size: 10px;
    padding: 5px 10px;
  }
}
</style>